@model FinancialPortal.Models.Household

@{
    ViewBag.Title = "Create";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">Build a house</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item">Build a house</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h5>Create your household</h5>
                <hr>
                @using (Html.BeginForm())
                {
                    <div class="row">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name your house:</label>
                                <input type="text" name="Name" class="form-control" placeholder="Enter name">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>House greeting:</label>
                                <textarea name="Greeting" class="form-control" rows="3" placeholder="Salutations"></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn  btn-primary" style="margin-left: 15px">Build Your House</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

