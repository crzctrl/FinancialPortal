@model FinancialPortal.Models.Household

@{
    ViewBag.Title = "AppointSuccessor";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">The Household</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item">Run Away</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-10 offset-1">
        <div class="card">
            <div class="card-body">
                <h5>Not so fast</h5>
                <hr>
                @using (Html.BeginForm("AppointSuccessor", "Households", FormMethod.Post))
                {
                    <div class="row">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-md-10 offset-1 text-center">
                            <label style="font-size:x-large; text-align:center">There is still family in the house.<br />Give the keys to another family member.</label>
                        </div>

                        <div class="col-md-10 offset-1">
                            <div class="form-group">
                                <label>Choose the new Head of Household:</label>
                                @Html.DropDownList("Successor", null, "-- Select --", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-10 offset-1">
                            <button type="submit" class="btn  btn-primary" @*style="margin-left: 15px"*@>Run Away</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}