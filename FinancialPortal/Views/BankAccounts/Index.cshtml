@model IEnumerable<FinancialPortal.Models.BankAccount>

@{
    ViewBag.Title = "Index";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">Money in the Bank</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item">Bank Accounts</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card card-border-c-blue">
            <div class="card-header">
                <h2>Index</h2>
                <div class="card-header-right" style="margin-top: 5px; padding-right: 15px">
                    <a href="@Url.Action("Create")" class="btn btn-outline-primary btn-lg">Create New</a>
                </div>
            </div>
            <div class="card-body">
                <div class="dt-responsive table-responsive">
                    <table class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Household)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayName("Account Type")
                                </th>
                                <th>
                                    @Html.DisplayName("Creator")
                                </th>
                                @*<th>
            @Html.DisplayNameFor(model => model.StartingBalance)
        </th>*@
                                <th>
                                    @Html.DisplayName("Low Balance Threshold")
                                </th>
                                <th>
                                    @Html.DisplayName("Current Balance")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Household.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AccountType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Owner.FirstName)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.StartingBalance)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LowBalanceThreshold)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CurrentBalance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>